{
  "author": "Carles Capellas <capellas.carles@gmail.com>",
  "description": "Web adaptation of the monopoly board game",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "license": "ISC",
  "name": "webopoly",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capelski/webopoly.git"
  },
  "scripts": {
    "build": "npm run clean && npm run build:all && cp -r projects/@webopoly/client/dist docs",
    "build:all": "npm run build -w @webopoly/client",
    "clean": "rm -rf docs",
    "clean-modules": "rm -rf node_modules",
    "dev": "concurrently 'npm run dev -w @webopoly/client'"
  },
  "version": "1.0.0",
  "workspaces": [
    "projects/@webopoly/client"
  ]
}
